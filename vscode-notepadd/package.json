{
	"name": "notepadd",
	"displayName": "NotePADD",
	"version": "0.1.0",
	"private": true,
	"description": "Note-taking and dashboard tool.",
	"categories": [
		"Notebooks"
	],
	"homepage": "https://github.com/esdmr/notepadd#readme",
	"bugs": "https://github.com/esdmr/notepadd/issues",
	"repository": "https://github.com/esdmr/notepadd",
	"license": "MIT",
	"author": {
		"name": "Saeed M Rad",
		"email": "esdmr0@gmail.com",
		"url": "https://esdmr.ir"
	},
	"publisher": "esdmr",
	"type": "module",
	"main": "src/index.ts",
	"scripts": {
		"vsce": "cd build && vsce"
	},
	"contributes": {
		"notebooks": [
			{
				"type": "notepadd",
				"displayName": "NotePADD",
				"selector": [
					{
						"filenamePattern": "*.np.md"
					}
				]
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "notepadd",
					"title": "NotePADD Bridge",
					"icon": "src/notepadd-icon.svg"
				}
			]
		},
		"views": {
			"notepadd": [
				{
					"id": "notepadd-active-events",
					"contextualTitle": "NotePADD",
					"name": "Active Events",
					"icon": "src/notepadd-icon.svg"
				},
				{
					"id": "notepadd-past-alarms",
					"contextualTitle": "NotePADD",
					"name": "Past Alarms",
					"icon": "src/notepadd-icon.svg"
				},
				{
					"id": "notepadd-directives",
					"contextualTitle": "NotePADD",
					"name": "Directives",
					"icon": "src/notepadd-icon.svg"
				}
			]
		},
		"languages": [
			{
				"id": "notepadd",
				"aliases": [
					"NotePADD Directive"
				]
			}
		],
		"commands": [
			{
				"command": "notepadd.exportToLatex",
				"title": "Export to LaTeX",
				"category": "NotePADD"
			},
			{
				"command": "notepadd.restartTimekeeper",
				"title": "Restart Timekeeper",
				"category": "NotePADD"
			},
			{
				"command": "notepadd.startTimekeeper",
				"title": "Start Timekeeper",
				"category": "NotePADD"
			},
			{
				"command": "notepadd.stopTimekeeper",
				"title": "Stop Timekeeper",
				"category": "NotePADD"
			},
			{
				"command": "notepadd.directives.sortFromTimeAscending",
				"title": "Sort…",
				"category": "NotePADD Directives",
				"icon": {
					"light": "src/view/time-ascending-light.svg",
					"dark": "src/view/time-ascending-dark.svg"
				},
				"enablement": "notepadd.directives.sortBy == 'timeAscending' || !notepadd.directives.sortBy"
			},
			{
				"command": "notepadd.directives.sortFromTimeDescending",
				"title": "Sort…",
				"category": "NotePADD Directives",
				"icon": {
					"light": "src/view/time-descending-light.svg",
					"dark": "src/view/time-descending-dark.svg"
				},
				"enablement": "notepadd.directives.sortBy == 'timeDescending'"
			},
			{
				"command": "notepadd.directives.sortFromOrderAscending",
				"title": "Sort…",
				"category": "NotePADD Directives",
				"icon": {
					"light": "src/view/order-ascending-light.svg",
					"dark": "src/view/order-ascending-dark.svg"
				},
				"enablement": "notepadd.directives.sortBy == 'orderAscending'"
			},
			{
				"command": "notepadd.directives.sortFromOrderDescending",
				"title": "Sort…",
				"category": "NotePADD Directives",
				"icon": {
					"light": "src/view/order-descending-light.svg",
					"dark": "src/view/order-descending-dark.svg"
				},
				"enablement": "notepadd.directives.sortBy == 'orderDescending'"
			},
			{
				"command": "notepadd.directives.viewAsList",
				"title": "View as List",
				"category": "NotePADD Directives",
				"icon": "$(list-tree)",
				"enablement": "notepadd.directives.viewAsTree"
			},
			{
				"command": "notepadd.directives.viewAsTree",
				"title": "View as Tree",
				"category": "NotePADD Directives",
				"icon": "$(list-flat)",
				"enablement": "!notepadd.directives.viewAsTree"
			},
			{
				"command": "notepadd.active-events.find",
				"title": "Find or Filter",
				"category": "NotePADD Active Events",
				"icon": "$(search)"
			},
			{
				"command": "notepadd.past-alarms.find",
				"title": "Find or Filter",
				"category": "NotePADD Past Alarms",
				"icon": "$(search)"
			},
			{
				"command": "notepadd.directives.find",
				"title": "Find or Filter",
				"category": "NotePADD Directives",
				"icon": "$(search)"
			}
		],
		"menus": {
			"notebook/toolbar": [
				{
					"group": "Export",
					"command": "notepadd.exportToLatex",
					"when": "notebookType == 'notepadd'"
				}
			],
			"view/title": [
				{
					"group": "navigation",
					"command": "notepadd.directives.sortFromTimeAscending",
					"when": "view == 'notepadd-directives' && (notepadd.directives.sortBy == 'timeAscending' || !notepadd.directives.sortBy)"
				},
				{
					"group": "navigation",
					"command": "notepadd.directives.sortFromTimeDescending",
					"when": "view == 'notepadd-directives' && notepadd.directives.sortBy == 'timeDescending'"
				},
				{
					"group": "navigation",
					"command": "notepadd.directives.sortFromOrderAscending",
					"when": "view == 'notepadd-directives' && notepadd.directives.sortBy == 'orderAscending'"
				},
				{
					"group": "navigation",
					"command": "notepadd.directives.sortFromOrderDescending",
					"when": "view == 'notepadd-directives' && notepadd.directives.sortBy == 'orderDescending'"
				},
				{
					"group": "navigation",
					"command": "notepadd.directives.viewAsList",
					"when": "view == 'notepadd-directives' && notepadd.directives.viewAsTree"
				},
				{
					"group": "navigation",
					"command": "notepadd.directives.viewAsTree",
					"when": "view == 'notepadd-directives' && !notepadd.directives.viewAsTree"
				},
				{
					"group": "navigation",
					"command": "notepadd.active-events.find",
					"when": "view == 'notepadd-active-events'"
				},
				{
					"group": "navigation",
					"command": "notepadd.past-alarms.find",
					"when": "view == 'notepadd-past-alarms'"
				},
				{
					"group": "navigation",
					"command": "notepadd.directives.find",
					"when": "view == 'notepadd-directives'"
				}
			]
		},
		"configuration": {
			"title": "NotePADD",
			"properties": {
				"notepadd.plantuml.java": {
					"type": "string",
					"scope": "machine-overridable",
					"default": "java",
					"description": "Java runtime location"
				},
				"notepadd.plantuml.jar": {
					"type": "string",
					"scope": "machine-overridable",
					"default": "",
					"description": "plantuml.jar location"
				},
				"notepadd.plantuml.server": {
					"type": "string",
					"scope": "machine-overridable",
					"default": "",
					"description": "PlantUML server location"
				},
				"notepadd.plantuml.renderer": {
					"type": "string",
					"scope": "machine-overridable",
					"default": "Local",
					"enum": [
						"Local",
						"Server"
					],
					"enumDescriptions": [
						"Using plantuml.jar locally",
						"Via PlantUML server"
					],
					"description": "Select where should PlantUML diagrams be rendered"
				},
				"notepadd.plantuml.javaArguments": {
					"type": "array",
					"scope": "resource",
					"items": {
						"type": "string",
						"minLength": 1
					},
					"default": [],
					"description": "Arguments passed to Java"
				},
				"notepadd.plantuml.jarArguments": {
					"type": "array",
					"scope": "resource",
					"items": {
						"type": "string",
						"minLength": 1
					},
					"default": [],
					"description": "Arguments passed to plantuml.jar"
				},
				"notepadd.view.directives.viewAsTree": {
					"type": "boolean",
					"scope": "application",
					"ignoreSync": true,
					"default": false,
					"description": "Should the directives panel be shown as a tree"
				},
				"notepadd.view.directives.sortBy": {
					"type": "string",
					"scope": "application",
					"ignoreSync": true,
					"default": "timeAscending",
					"enum": [
						"timeAscending",
						"timeDescending",
						"orderAscending",
						"orderDescending"
					],
					"description": "How should the directives panel be sorted"
				}
			}
		}
	},
	"activationEvents": [
		"onNotebook:notepadd",
		"workspaceContains:**/*.np.md"
	],
	"dependencies": {
		"@esdmr/nearley": "3.0.3",
		"execa": "9.3.1",
		"notepadd-core": "workspace:*",
		"notepadd-timekeeper": "workspace:*",
		"uint8array-extras": "1.4.0"
	},
	"devDependencies": {
		"@types/node": "20.17.32",
		"@types/vscode": "1.91.0",
		"@vscode/vsce": "3.3.2",
		"vite": "6.3.4",
		"vite-plugin-child-process": "workspace:*",
		"vite-plugin-inspect": "0.10.6",
		"vite-plugin-nearley": "workspace:*",
		"vite-plugin-vscode": "workspace:*"
	},
	"packageManager": "pnpm@9.15.9",
	"engines": {
		"vscode": "^1.91.0"
	},
	"capabilities": {
		"untrustedWorkspaces": {
			"supported": false,
			"description": "// FIXME"
		},
		"virtualWorkspaces": {
			"supported": false,
			"description": "// FIXME"
		}
	}
}
